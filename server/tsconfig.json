{
     "compilerOptions": {
       "target": "es2017",
       "module": "commonjs",
       "moduleResolution": "Node",
       "rootDir": "./",
       "outDir": "dist",
       "lib": ["es2019"],
       "esModuleInterop": true,
       "sourceMap": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "noImplicitAny": true,
       "noUnusedLocals": true,
       "noImplicitOverride": true,
     },
     "exclude": ["node_modules", "templates", "dist", "bin", "migrations"]
}
